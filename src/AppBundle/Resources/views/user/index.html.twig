{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste utilisateurs</h1>

    <a href="{{ path('user_new') }}" class="btn btn-primary">Créer un nouvel utilisateur</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_edit', { 'id': user.id }) }}">{{ user.firstName }}</a></td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.mail }}</td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}">Consulter</a> |
                    <a href="{{ path('user_edit', { 'id': user.id }) }}">Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
